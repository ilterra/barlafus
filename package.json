{
  "author": "Alberto Terragni",
  "bugs": {
    "url": "https://github.com/ninjabachelor/barlafus/issues"
  },
  "dependencies": {},
  "description": "Barlafus static blog generator",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.1",
    "flow-bin": "^0.47.0",
    "flow-copy-source": "^1.1.0",
    "jest-cli": "^20.0.4",
    "prettier": "^1.4.1"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "files": [
    "lib",
    "settings",
    "yarn.lock"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "keywords": [
    "barlafus",
    "static",
    "blog",
    "generator"
  ],
  "license": "MIT",
  "main": "./lib/index.js",
  "name": "barlafus",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninjabachelor/barlafus"
  },
  "scripts": {
    "build": "yarn run build:dir && yarn run build:lib",
    "build:dir": "rm -rf lib && mkdir lib",
    "build:lib": "babel src -d lib",
    "build:lib:watch": "yarn run build:dir && babel -w src -d lib",
    "eslint": "eslint src __tests__",
    "eslint:fix": "eslint --fix src __tests__",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "flow-copy-source": "flow-copy-source src lib",
    "prepublish": "yarn run build && yarn run flow-copy-source",
    "test": "jest --coverage"
  },
  "version": "0.0.1"
}
